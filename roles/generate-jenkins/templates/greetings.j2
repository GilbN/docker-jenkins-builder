name: Greetings

on: [pull_request_target, issues]

jobs:
  greeting:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/first-interaction@v1
      with:
        issue-message: '{% if project_deprecation_status %}This image is deprecated. It will no longer receive automated updates. The [README]({{ lsio_github_url }}/{{ project_repo_name }}/blob/{{ ls_branch }}/README.md) may have additional information. {% endif %}Thanks for opening your first issue here! Be sure to follow the [bug]({{ lsio_github_url }}/{{ project_repo_name }}/blob/{{ ls_branch }}/.github/ISSUE_TEMPLATE/issue.bug.md) or [feature]({{ lsio_github_url }}/{{ project_repo_name }}/blob/{{ ls_branch }}/.github/ISSUE_TEMPLATE/issue.feature.md) issue templates!'
        pr-message: '{% if project_deprecation_status %}This image is deprecated. It will no longer receive automated updates. The [README]({{ lsio_github_url }}/{{ project_repo_name }}/blob/{{ ls_branch }}/README.md) may have additional information. {% endif %}Thanks for opening this pull request! Be sure to follow the [pull request template]({{ lsio_github_url }}/{{ project_repo_name }}/blob/{{ ls_branch }}/.github/PULL_REQUEST_TEMPLATE.md)!'
        repo-token: ${{ '{{' }} secrets.GITHUB_TOKEN {{ '}}' }}
